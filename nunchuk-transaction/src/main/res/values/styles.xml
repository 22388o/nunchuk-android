<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NCTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/nc_primary_dark_color</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">@color/nc_white_color</item>
        <item name="tabSelectedTextColor">@color/nc_primary_dark_color</item>
        <item name="tabTextColor">@color/nc_primary_dark_color</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="tabTextAppearance">@style/NCTextAppearance</item>
    </style>

    <style name="NCTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>