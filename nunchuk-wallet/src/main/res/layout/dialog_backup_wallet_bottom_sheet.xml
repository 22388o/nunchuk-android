<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nc_bottom_sheet_background"
    android:orientation="vertical"
    android:padding="@dimen/nc_padding_16"
    android:paddingBottom="300dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp">

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btn_export_bsms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_backup"
        android:drawablePadding="@dimen/nc_padding_8"
        android:paddingHorizontal="@dimen/nc_padding_14"
        android:paddingVertical="@dimen/nc_padding_16"
        android:text="@string/nc_wallet_save_wallet_configuration"
        android:textColor="@color/nc_black_color"
        android:textSize="@dimen/nc_text_size_16" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btnQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_qr"
        android:drawablePadding="@dimen/nc_padding_8"
        android:padding="@dimen/nc_padding_16"
        android:text="@string/nc_text_qr_code"
        android:textColor="@color/nc_black_color"
        android:textSize="@dimen/nc_text_size_16" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btn_export_passport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_qr"
        android:drawablePadding="@dimen/nc_padding_8"
        android:padding="@dimen/nc_padding_16"
        android:text="@string/nc_text_export_as_passport"
        android:textColor="@color/nc_black_color"
        android:textSize="@dimen/nc_text_size_16" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btn_export_coldcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_upload"
        android:drawablePadding="@dimen/nc_padding_8"
        android:padding="@dimen/nc_padding_16"
        android:text="@string/nc_wallet_export_coldcard"
        android:textColor="@color/nc_black_color"
        android:textSize="@dimen/nc_text_size_16" />

    <com.nunchuk.android.widget.NCFontTextView
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_delete"
        android:drawablePadding="@dimen/nc_padding_8"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/nc_padding_14"
        android:paddingVertical="@dimen/nc_padding_16"
        android:text="@string/nc_wallet_delete_wallet"
        android:textColor="@color/nc_red_color"
        android:textSize="@dimen/nc_text_size_16"
        app:drawableTint="@color/nc_primary_color" />

</LinearLayout>