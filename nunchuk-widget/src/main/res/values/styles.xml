<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NunchukTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/nc_primary_color</item>
        <item name="colorPrimaryDark">@color/nc_primary_dark_color</item>
        <item name="colorAccent">@color/nc_accent_color</item>
    </style>

    <style name="SplashTheme" parent="NunchukTheme">
        <item name="android:windowBackground">@color/nc_primary_dark_color</item>
    </style>

    <style name="MainScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/nc_primary_color</item>
        <item name="colorPrimaryDark">@color/nc_primary_dark_color</item>
        <item name="colorAccent">@color/nc_accent_color</item>
    </style>

    <style name="NunchukLightNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/nc_accent_color</item>
        <item name="android:windowBackground">@color/nc_white_color</item>
    </style>

    <style name="NunchukDarkNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/nc_primary_color</item>
        <item name="colorPrimaryDark">@color/nc_primary_dark_color</item>
        <item name="colorAccent">@color/nc_accent_color</item>
        <item name="android:windowBackground">@color/nc_white_color</item>
    </style>
</resources>